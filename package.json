{
  "name": "vite-web-extension",
  "displayName": "Web Extension Boilerplate",
  "version": "0.0.1",
  "description": "A simple chrome extension template with Manifest V3, WebExtension Polyfill, Vite, React, TypeScript and Tailwind CSS.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "dev": "nodemon",
    "dist": "run-s clear lint build dist:*",
    "dist:zip": "mkdirp ./dist && rimraf ./dist/extension.zip && jszip-cli add extension -o ./dist/extension.zip",
    "dist:crx": "mkdirp ./dist && crx pack extension -o ./dist/extension.crx -p ./dist/key.pem",
    "dist:xpi": "mkdirp ./dist && cross-env WEB_EXT_ARTIFACTS_DIR=./dist web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf extension dist",
    "lint": "eslint 'src/**/*.{json,ts,js}'"
  },
  "type": "module",
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.9.0"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.6",
    "@types/chrome": "^0.0.180",
    "@types/node": "^17.0.23",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/webextension-polyfill": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fs-extra": "^10.0.0",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5",
    "unplugin-auto-import": "^0.9.4",
    "vite": "^2.9.1",
    "web-ext": "^7.1.1"
  }
}
